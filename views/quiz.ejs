<%- include("partials/header") -%>

<body onload="formatQuestion()">
	<h2 id="title"></h2>
	<div class="example-container"><p id="example"></p></div>
	<p id="number-info">Unscramble <span id="question-number"></span> of <span id="total"></span> sentences.</p>
	<h4 id="mother-tounge"></h4>
	<div class="choice-box"></div>
	<span id="beginning"></span>
	<div class="answer-container"></div>
	<span id="end"></span><br>
	<button class="btn btn-primary" onclick="checkAnswer()">Submit Answer</button>
	<button class="btn btn-primary" onclick="showAnswer()">Show Answer</button>	
	
